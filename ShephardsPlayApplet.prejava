                double s = Math.sin(Math.PI*n/d);
                return sign*s*s;
            } // sinSquaredPiTimes

            // cos(pi*n/d) squared times sign, but do it without trig if it's a nice angle
            private static double cosSquaredPiTimes(int n, int d)
            {
