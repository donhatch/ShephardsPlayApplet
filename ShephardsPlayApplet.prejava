            public void mouseDragged(java.awt.event.MouseEvent e)
            {
                if (eventVerbose >= 2) System.out.println("  in mouseDragged: "+e);

                boolean snapToGrid = e.isControlDown();
                double thisP[] = new double[2];
                mostRecentGraphics.pick(e.getX()+.5, e.getY()+.5, thisP);
                if (draggingRotation)
                {
                    // increment tilt according to deltaY,
                    // and twirl according to deltaX
                    double deltaX = thisP[0]-prevP[0];
                    double deltaY = thisP[1]-prevP[1];

                    // too slow unless we multiply it by something!
                    deltaX *= 5.;
                    deltaY *= 5.;

                    // so we ignore pure x jiggle when tilt is maxed...
                    if (!(tilt <= 0. && deltaY <= 0.)
                     && !(tilt >= Math.PI && deltaY >= 0))
                        twirl += deltaX;
                    tilt += deltaY;

                    while (twirl < -Math.PI) twirl += 2*Math.PI;
                    while (twirl >  Math.PI) twirl -= 2*Math.PI;

                    // any excess tilt is turned into twirl towards zero,
                    // making it park at tilt=0, twirl=0
                    if (tilt < 0.)
                    {
                        if (twirl < 0.)
                            twirl = MIN(twirl + -tilt, 0.);
                        else
                            twirl = MAX(twirl - -tilt, 0.);
                        tilt = 0.;
                    }
                    else if (tilt > Math.PI)
                    {
                        if (twirl < 0.)
                            twirl = MIN(twirl + (tilt-Math.PI), 0.);
                        else
                            twirl = MAX(twirl - (tilt-Math.PI), 0.);
                        tilt = Math.PI;
                    }

                    if (true)
                    {

                        // tweak the scale part:
                        // make it so if the z axis didn't rotate much, z scale is 0.
                        // this is so that all the perpendiculars and stuff will look right
                        // when looking at it top-down.
                        if (tilt < DTOR(10.))
                        {
                            localScaleZ = tilt / DTOR(10.);
                            //OUT("flattish");
                        }
                        else
                        {
                            localScaleZ = 1.;
                            //OUT("bumpy");
                        }
                    }
                }

                if (button1IsDown || button2IsDown) // XXX wean away from the button2IsDown thing
                {
                    if (rubberBandingNewEdge)
                    {
                        if (snapToGrid)
                        {
                            double projectedThisP[] = new double[3];
                            pickPointOnParaboloid(thisP, 0., projectedThisP);
                            double snappedProjectedThisP[] = !snapToGrid ? projectedThisP : new double[] {
                                (double)Math.round(projectedThisP[0]/gridSnapQuantum)*gridSnapQuantum,
                                (double)Math.round(projectedThisP[1]/gridSnapQuantum)*gridSnapQuantum,
                                0., // we'll fix this in a moment
                            };
                            snappedProjectedThisP[2] = 0. - .5 * (SQR(snappedProjectedThisP[0]) + SQR(snappedProjectedThisP[1]));

                            // now what??? project back to screen and set prevP to it.
                            // argh, but then it will get clobbered at the bottom.
                            // oh, set *thisP* to it, so prevP will get set to that! hacky

                            double scratch[] = new double[3];
                            mostRecentGraphics.xform(snappedProjectedThisP[0], snappedProjectedThisP[1], snappedProjectedThisP[2], scratch);
                            VecMath.copyvec(2, thisP, scratch);
                        }
                    }
                    else
                    {
                        if (beingDraggedNetEdgeIndex != -1)
                        {
                            beingDraggedNetEdgeDelta[0] += thisP[0]-prevP[0]; // no snap to grid for this
                            beingDraggedNetEdgeDelta[1] += thisP[1]-prevP[1]; // no snap to grid for this
                        }
                        else if (e.isShiftDown())
                        {
                            // Drag all the verts and dual verts.
                            // No need to invalidate anything.
                            FORIDOWN (iVert, mesh.verts.size())
                            {
                                mesh.getVert(iVert).x += thisP[0]-prevP[0];
                                mesh.getVert(iVert).y += thisP[1]-prevP[1];
                            }
                            Mesh dualMesh = getDualMesh();
                            FORIDOWN (iDualVert, dualMesh.verts.size())
                            {
                                dualMesh.getVert(iDualVert).x += thisP[0]-prevP[0];
                                dualMesh.getVert(iDualVert).y += thisP[1]-prevP[1];
                                double momentAndArea[] = dualMesh.getVert(iDualVert).momentAndArea;
                                assert(momentAndArea.length == 4);
                                momentAndArea[0] += (thisP[0]-prevP[0]) * momentAndArea[3];
                                momentAndArea[1] += (thisP[1]-prevP[1]) * momentAndArea[3];
                                // height doesn't change
                            }
                        }
                        else if (beingDraggedVertIndex != -1)
                        {
                            Mesh.Vertex beingDraggedVert = mesh.getVert(beingDraggedVertIndex);
                            double projectedThisP[] = new double[3];
                            pickPointOnParaboloid(thisP, beingDraggedVert.h, projectedThisP);
                            double projectedPrevP[] = new double[3];
                            pickPointOnParaboloid(prevP, beingDraggedVert.h, projectedPrevP);

                            beingDraggedVertUnsnappedXY[0] += projectedThisP[0] - projectedPrevP[0];
                            beingDraggedVertUnsnappedXY[1] += projectedThisP[1] - projectedPrevP[1];

                            if (rotationalSymmetry > 1
                             || leftRightSymmetry)
                            {
                                // Drag all points of kaleidoscope

                                double group[][][] = computeSymmetryGroup(rotationalSymmetry, leftRightSymmetry);
                                //PRINTARRAY(group);

                                double v[] = {beingDraggedVert.x,
                                              beingDraggedVert.y};
                                double dv[];
                                if (snapToGrid)
                                {
                                    double beingDraggedVertSnappedXY[] = {
                                        (double)Math.round(beingDraggedVertUnsnappedXY[0]/gridSnapQuantum)*gridSnapQuantum,
                                        (double)Math.round(beingDraggedVertUnsnappedXY[1]/gridSnapQuantum)*gridSnapQuantum,
                                    };
                                    dv = VecMath.vmv(2, beingDraggedVertSnappedXY, v);
                                }
                                else
                                {
                                    dv = VecMath.vmv(2, beingDraggedVertUnsnappedXY, v);
                                }

                                int nVerts = mesh.verts.size();
                                double newVertPositions[][] = new double[nVerts][2];
                                FORI (i, newVertPositions.length)
                                {
                                    newVertPositions[i][0] = mesh.getVert(i).x;
                                    newVertPositions[i][1] = mesh.getVert(i).y;
                                }

                                // Whenever we can find a reflected image vertex in a mirror,
                                // apply the reflected dv to the reflected image vertex.
                                // In particular, if the vertex is its own image,
                                // that means the mirror passes through it;
                                // this will end up constraining it to the mirror
                                // (and moving it twice as far along the mirror as otherwise, which is fine).
                                // XXX should just move the reflection to the new reflection, I think, to prevent drift? hmm, but then we'd lose the nice locked-to-mirror behavior
                                FORI (iGroup, group.length)
                                {
                                    double image[] = VecMath.vxm(v,group[iGroup]);

                                    FORI (iImage, nVerts)
                                    {
                                        Mesh.Vertex imageVert = mesh.getVert(iImage);
                                        if (EQ(image[0], imageVert.x, 1e-6)
                                         && EQ(image[1], imageVert.y, 1e-6))
                                        {
                                            // TODO: snap imageVertPosition to image, to prevent drift away from symmetry?
                                            double imageTweak[] = VecMath.vxm(dv, group[iGroup]);
                                            VecMath.vpv(newVertPositions[iImage],
                                                        newVertPositions[iImage],
                                                        imageTweak);
                                        }
                                    }
                                }
                                FORI (i, newVertPositions.length)
                                {
                                    mesh.getVert(i).x = newVertPositions[i][0];
                                    mesh.getVert(i).y = newVertPositions[i][1];
                                }
                            }
                            else
                            {
                                // Drag just the selected vert
                                beingDraggedVert.x = beingDraggedVertUnsnappedXY[0];
                                beingDraggedVert.y = beingDraggedVertUnsnappedXY[1];

                                if (snapToGrid)
                                {
                                    beingDraggedVert.x = (double)Math.round(beingDraggedVert.x/gridSnapQuantum)*gridSnapQuantum;
