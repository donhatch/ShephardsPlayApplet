                if (eventVerbose >= 3) System.out.println("    in mouseMoved: "+e);

                if (mostRecentGraphics != null)
                {
                    double thisP[] = new double[2];
                    mostRecentGraphics.pick(e.getX()+.5, e.getY()+.5, thisP);
                    if (showNetFlag.get())
                    {
