                        }
                    }
                    prevP = thisP;

                    if (showMagFlag.get())
                        theCanvas.repaint();

                    if (primalDualVisFlag.get()
                     && primalDualVisAngles != null
                     && primalDualVisPrimalVertInds != null
                     && primalDualVisDualVertInds != null)
                        theCanvas.repaint();
                }

                if (eventVerbose >= 3) System.out.println("    out mouseMoved: "+e);
            } // mouseMoved

