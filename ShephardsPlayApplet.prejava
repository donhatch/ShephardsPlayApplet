                                }
                            }


                            PRINT(nGoodness);
                            PRINT(iGoodness);
                            //double synopsis = VecMath.synopsis(iGoodness, goodnessVector);
                            double synopsis = simpleSynopsis(iGoodness, goodnessVector);
                            //double synopsis = synopsis(iGoodness, goodnessVector);
                            System.out.println("        synopsis = "+synopsis);
