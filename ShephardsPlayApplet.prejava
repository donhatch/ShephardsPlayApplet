                        nParticipants++;
                        sum1 += x;
                        sum2 += x*x;
                    }
                }
                if (nParticipants == 1)
                    return min;
                double discr = SQR(2*sum1) - (4*nParticipants-1)*sum2;
                PRINTVEC((double[])Arrays.subarray(v,0,n));
                PRINT(min);
                PRINT(sum1);
                PRINT(sum2);
                PRINT(discr);
                PRINT(nParticipants);
                //assert_ge(discr, 0.); // should be safely so (should be at least sum2)... can we reformulate to make that obvious?  no wait, that's not even right :-(  may need to go back to the drawing board on this whole thing
                //assert(GEQ(discr, 0., 5.549966375204551E-4)); // TODO: use or write an assert variation
