        @Override public boolean validate(String text)
        {
            try {
                // attempt to parse, ignore return value
                if (f instanceof Listenable.Int)
                    Integer.parseInt(text);
                else if (f instanceof Listenable.Long)
                    Long.parseLong(text);
                else
                    Double.parseDouble(text);
                return true;
