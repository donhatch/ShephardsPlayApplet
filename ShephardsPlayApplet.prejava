                    mesh.getVert(8).setYnaive(mesh.getVert(8).Ynaive() + 1/4096.);
                }
                // TODO: huh, Ynaive() works here, why doesn't it work during an 'f' afterwards?

                rescale(.25, .25);
            } // doCannedThingSweepKiller0

