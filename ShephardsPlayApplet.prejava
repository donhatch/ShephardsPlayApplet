            private void doJustNoiseThing(int n)
            {
                double verts[][] = new double[n][3];
                if (wrapAroundSphereFlag.get())
                {
                    FORI (iVert, verts.length)
                    {
                        while (true)
                        {
                            verts[iVert][0] = randomNumberGenerator.nextDouble()*2.-1.;
                            verts[iVert][1] = randomNumberGenerator.nextDouble()*2.-1.;
                            verts[iVert][2] = randomNumberGenerator.nextDouble()*2.-1.;
                            double length2 = VecMath.normsqrd(verts[iVert]);
                            if (length2 <= 1. && length2 >= SQR(1e-6))
                                break;
                        }
                        VecMath.normalize(verts[iVert], verts[iVert]);
                    }
                }
                else
                {
                    FORI (iVert, verts.length)
                    {
                        verts[iVert][0] = randomNumberGenerator.nextDouble() - .5;
                        verts[iVert][1] = randomNumberGenerator.nextDouble() - .5;
                        verts[iVert][2] = 0.;
                    }
                }
                mesh = new Mesh(verts, new int[][]{});
                nFixagesSinceLastNoise = 0;
            } // doJustNoiseThing

            private void doConvexNoiseThing0(int n)
            {
                if (false)
                {
                    OUT("RESETTING RNG");
                    randomNumberGenerator = new java.util.Random(0);
                }

                int verboseLevel = 1;
                if (verboseLevel >= 1) OUT("    in doConvexNoiseThing0");
                double verts[][] = new double[n][3];
                if (wrapAroundSphereFlag.get())
                {
                    unimplemented(); // TODO: implement me!
                }
                else
                {
                    if (verboseLevel == 2) OUT("        ");
                    if (verboseLevel == 2) System.out.flush();
                    double r = .25;
                    if (verts.length > 0) VecMath.copyvec(verts[0], new double[]{-r,-r,0});
                    if (verts.length > 1) VecMath.copyvec(verts[1], new double[]{r,-r,0});
                    if (verts.length > 2) VecMath.copyvec(verts[2], new double[]{r,r,0});
                    if (verts.length > 3) VecMath.copyvec(verts[3], new double[]{-r,r,0});
                    for (int iVert = 4; iVert < verts.length; ++iVert)
                    {
                        if (verboseLevel >= 3) OUT("          choosing vert "+iVert+"/"+verts.length);
                        while (true)
                        {
                            verts[iVert][0] = (2*randomNumberGenerator.nextDouble()-1) * r;
                            verts[iVert][1] = (2*randomNumberGenerator.nextDouble()-1) * r;
                            double zMin = -1.;
                            double zMax = r*r * .25;
                            for (int i = 0; i < iVert && zMin < zMax; ++i)
                            for (int j = 0; j < i && zMin < zMax; ++j)
                            for (int k = 0; k < j && zMin < zMax; ++k)
                            {
                                double a[] = verts[i];
                                double b[] = verts[j];
                                double c[] = verts[k];
                                double abcArea = GeomUtils.twiceTriangleArea(a,b,c);
                                if (abcArea < 0.)
                                {
                                    double temp[];
                                    SWAP(b,c,temp);
                                    abcArea *= -1.;
                                }
                                double d[] = verts[iVert]; // with z not set yet
                                double abdArea = GeomUtils.twiceTriangleArea(a,b,d);
                                double bcdArea = GeomUtils.twiceTriangleArea(b,c,d);
                                double cadArea = GeomUtils.twiceTriangleArea(c,a,d);
                                double minArea = MIN3(abdArea, bcdArea, cadArea);
                                if (EQ(abdArea, 0., 1e-9)
                                 || EQ(bcdArea, 0., 1e-9)
                                 || EQ(cadArea, 0., 1e-9))
                                {
                                    // set to impossible so we kill this x,y
                                    zMin = 1.;
                                    zMax = -1.;
                                    break;
                                }
                                // so now all the areas are safely nonzero
                                int nPositive = (abdArea > 0. ? 1 : 0)
                                              + (bcdArea > 0. ? 1 : 0)
                                              + (cadArea > 0. ? 1 : 0);
                                #define BARY(a, b, s, c, t) ((1.-(s)-(t))*(a) + (b)*(s) + (t)*(c))
                                // Extrapolation in plane of a triangle can be done
                                // by barycentric averaging (same as interpolation)
                                double zIntercept = BARY(a[2],
                                                         b[2], cadArea/abcArea,
                                                         c[2], abdArea/abcArea);
                                if (nPositive == 3)
                                    zMin = MAX(zMin, zIntercept);
                                else if (nPositive == 1)
                                    zMax = MIN(zMax, zIntercept);
                            }
                            if (zMin > zMax)
                            {
                                System.out.print("!");
                                System.out.flush();
                                //assert(false); // coverage
                                continue; // bad; try again
                            }
                            if (verboseLevel >= 3) PRINT(zMin);
                            if (verboseLevel >= 3) PRINT(zMax);
                            double t = randomNumberGenerator.nextDouble();
                            verts[iVert][2] = LERP(zMin, zMax, t);
                            break;
                        }
                        if (verboseLevel == 2) System.out.print(".");
                        if (verboseLevel == 2) System.out.flush();
                    }
                    if (verboseLevel == 2) System.out.println();
                }

                // Just did all that in 3d space,
                // but about to pass in the verts as heights, so need to translate.
                if (true)
                {
                    FORI (i, n)
                    {
                        verts[i][2] += .5 * (SQR(verts[i][0]) + SQR(verts[i][1]));
                    }
                }

                this.mesh = new Mesh(verts, new int[][]{});
                this.nFixagesSinceLastNoise = 0;
                if (verboseLevel >= 1) OUT("    out doConvexNoiseThing0");
            } // doConvexNoiseThing0

            // Polygon theoretically doesn't need to contain the origin,
            // but this will be inefficient if it doesn't (or if polygon is needle shaped).
            private static void random2insideConvexPolygon(double answer[], double verts[][], java.util.Random rng)
            {
                double maxCircumRadiusSquared = 0.;
                FORI (i, verts.length)
                    maxCircumRadiusSquared = SQR(verts[i][0]) + SQR(verts[i][1]);
                double maxXorY = Math.sqrt(maxCircumRadiusSquared);
                while (true)
                {
                    answer[0] = (2*rng.nextDouble()-1) * maxXorY;
                    answer[1] = (2*rng.nextDouble()-1) * maxXorY;
                    boolean bad = false;
                    FORI (i, verts.length)
                    {
                        if (GeomUtils.twiceTriangleArea(verts[i], verts[(i+1)%verts.length], answer) <= 0.)
                        {
                            //OUT("    bad because non-positive area: "+Arrays.toStringCompact(verts[i])+" "+Arrays.toStringCompact(verts[(i+1)%verts.length])+" "+Arrays.toStringCompact(answer));
                            bad = true;
                        }
                    }
                    if (!bad)
                    {
                        //OUT("good!");
                        return;
                    }
                }
            } // random2insideConvexPolygon

            private void doConvexNoiseThing1(int n)
            {
                if (false)
                {
                    OUT("RESETTING RNG");
                    randomNumberGenerator = new java.util.Random(0);
                }

                int verboseLevel = 1;
                if (verboseLevel >= 1) OUT("    in doConvexNoiseThing1");
                if (wrapAroundSphereFlag.get())
                {
                    unimplemented(); // TODO: implement me!
                }
                else
                {
                    double verts3d[][] = new double[n][3];
                    double initialVerts[][];
                    int initialFaces[][];
                    double maxHeight;

                    if (false)
                    {
                      // square
                      double r = .25;
                      initialVerts = new double[][]{
                        {-r,-r,0},
                        {r,-r,0},
                        {r,r,0},
                        {-r,r,0},
                      };
                      initialFaces = new int[][]{{0,1,2},{0,2,3},{0,3,1},{3,2,1}};
                      maxHeight = r / 2.; // if it's too big, dual will be too big. if it's too small, primal will look too flat to be interesting
                    }
                    else
                    {
                      // triangle, tuned so 3 outer faces are cube faces (but then fudged so they're not, oh well)
                      initialVerts = new double[][]{
                        { Math.sqrt(1.5), Math.sqrt(.5)},
                        {-Math.sqrt(1.5), Math.sqrt(.5)},
                        {0,-Math.sqrt(2.)},
                      };
                      double scale = 1./2.;
                      VecMath.mxs(initialVerts, initialVerts, scale);
                      initialFaces = new int[][]{{0,1,2},{2,1,0}};
                      maxHeight = 1./8; // fudged til dual tends to be in window mostly
                    }

                    VecMath.copymat(verts3d, initialVerts); // copies minimum of the two sizes
                    if (verts3d.length >= initialVerts.length)
                    {
                        Mesh scratchMesh = new Mesh(initialVerts, initialFaces);
                        for (int iVert = initialVerts.length; iVert < verts3d.length; ++iVert)
                        {
                            if (verboseLevel >= 3) OUT("          choosing vert "+iVert+"/"+verts3d.length);

                            if (false) // might want to do it with direct convex hull, not sure.  seems lots simpler than using mesh and delaunayize.
                            {
                                double tol = 0.; // don't know of any failures, see other use of convexHull
                                int hullStuff[/*3*/][/*nFacets*/][/*d=3*/] = ConvexHull.convexHull((double[][])Arrays.subarray(verts3d, 0, iVert), tol);
                                int hull[/*nFacets*/][/*d=3*/] = hullStuff[0];

                                PRINTMAT(MeshUtils.getMeshFaces(scratchMesh, true));
                                PRINTMAT(hull);
                            }

                            while (true)
                            {
                                if (iVert == initialVerts.length)
                                {
                                    VecMath.zerovec(2, verts3d[iVert]);
                                }
                                else
                                    random2insideConvexPolygon(verts3d[iVert], // put it here
                                                               initialVerts,
                                                               randomNumberGenerator);
                                // Figure out what height to put it at
                                double zMin = -1.;
                                double zMax = maxHeight;

                                int nEdges = scratchMesh.edges.size();
                                FORI (iEdge, nEdges)
                                {
                                    Mesh.Edge edgeI = scratchMesh.getEdge(iEdge);
                                    assert(edgeI.next().next().next() == edgeI);
                                    int i = edgeI.initialVertex().myIndex();
                                    int j = edgeI.next().initialVertex().myIndex();
                                    int k = edgeI.prev().initialVertex().myIndex();

                                    double a[] = verts3d[i];
                                    double b[] = verts3d[j];
                                    double c[] = verts3d[k];
                                    double abcArea = GeomUtils.twiceTriangleArea(a,b,c);
                                    if (abcArea < 0.)
                                    {
                                        if (verboseLevel >= 3) OUT("              skipping tri v"+i+",v"+j+",v"+k+" because inside out");
                                        continue;
                                    }
                                    if (verboseLevel >= 3) OUT("              not skipping tri v"+i+",v"+j+",v"+k+" because not inside out");

                                    double d[] = verts3d[iVert]; // with z not set yet
                                    double abdArea = GeomUtils.twiceTriangleArea(a,b,d);
                                    double bcdArea = GeomUtils.twiceTriangleArea(b,c,d);
                                    double cadArea = GeomUtils.twiceTriangleArea(c,a,d);

                                    if (!(initialVerts.length == 4 && iVert == 4)) // allow that special case
                                    {
                                        if (EQ(abdArea, 0., 1e-9)
                                         || EQ(bcdArea, 0., 1e-9)
                                         || EQ(cadArea, 0., 1e-9))
                                        {
                                            // set to impossible so we kill this x,y
                                            zMin = 1.;
                                            zMax = -1.;
                                            assert(false);
                                            break;
                                        }
                                    }

                                    boolean dIsInMiddle = (abdArea >= 0. && bcdArea >= 0 && cadArea >= 0); // CBB: we end up doing this 3 times, oh well
                                    boolean cIsInMiddle = (abdArea >= 0. && bcdArea <= 0. && cadArea <= 0.); // or maybe on the verge
                                    if (verboseLevel >= 3) OUT("                  dIsInMiddle = "+dIsInMiddle+(dIsInMiddle?"!!!!!!!!!!!!!!!!!":""));
                                    if (verboseLevel >= 3) OUT("                  cIsInMiddle = "+cIsInMiddle);
                                    if (dIsInMiddle || cIsInMiddle)
                                    {
                                        #define BARY(a, b, s, c, t) ((1.-(s)-(t))*(a) + (b)*(s) + (t)*(c))
                                        // Extrapolation in plane of a triangle can be done
                                        // by barycentric averaging (same as interpolation)
                                        double zIntercept = BARY(a[2],
                                                                 b[2], cadArea/abcArea,
                                                                 c[2], abdArea/abcArea);
                                        if (dIsInMiddle)
                                        {
                                            // d is in middle. Make sure z isn't so low that it disappears below this triangle.
                                            zMin = MAX(zMin, zIntercept);
                                        }
                                        else
                                        {
                                            // c is in middle. Make sure z isn't so high that it makes c disappear from convex hull.
                                            zMax = MIN(zMax, zIntercept);
                                        }
                                    }
                                }
                                if (zMin > zMax)
                                {
                                    System.out.print("!");
                                    System.out.flush();
                                    //assert(false); // coverage
                                    continue; // bad; try again
                                }
                                if (verboseLevel >= 3) PRINT(zMin);
                                if (verboseLevel >= 3) PRINT(zMax);
                                if (iVert == initialVerts.length)
                                {
                                    assert(zMin == 0.);
                                    assert(zMax == maxHeight);
                                }
                                else
                                {
                                    assert(zMin > 0.);
                                    assert(zMin < maxHeight);
                                }
                                double t;
                                if (iVert == initialVerts.length)
                                    t = 1.;
                                else
                                    t = randomNumberGenerator.nextDouble();
                                double z = LERP(zMin, zMax, t);

                                verts3d[iVert][2] = z;

                                {
                                    double verts[][] = VecMath.copymat(iVert+1, 3, verts3d);
                                    FORI (i, iVert+1) verts[i][2] += .5 * (SQR(verts[i][0]) + SQR(verts[i][1]));
                                    scratchMesh = new Mesh(verts, new int[][]{});
                                    scratchMesh = delaunayized(scratchMesh,
                                                               false, // wrap around sphere flag
                                                               1., // wrap sphere curvature (actually uses this, weird)
                                                               true, // center sphere flag (actually uses this, weird)
                                                               true, // calcInsideOutDualVertsFlag   (bleah, needs to be true so can assert all is triangles, in case initialVerts is a square)
                                                               false); // slightlyVerbose
                                    assert(scratchMesh.verts.size() == iVert+1);
                                    {
                                        // Assert no isolated verts.  can do that by counting edges and tris, and using euler's formula:
                                        //     v+f = e+2
                                        //       -> f = e+2-v
                                        //     2e = 3f (for triangulated)
                                        //        = 3(e+2-v)
                                        //     2e = 3e+6-3v
                                        //     -e = 6-3v
                                        //      e = 3v-6
                                        //     except this e is our edges.size()/2.
                                        // Note: appearance of isolated verts, currently, may be due to "and flat edges"
                                        assert(scratchMesh.edges.size() == 2*(3*scratchMesh.verts.size()-6));
                                    }

                                    // TODO: assert that there are exactly two inside out tris,
                                    // same as when we started (if started with a square)

                                    this.mesh = scratchMesh; // so I can see what was being worked with
                                }
                                break; // succeeded in adding the vertex, so break out of the while (true) loop
                            }

                            if (verboseLevel == 2) System.out.print(".");
                            if (verboseLevel == 2) System.out.flush();
                        }
                    }
                }
                if (true)
                {
                    // have to do it again with calcInsideOutDualVertsFlag=false, otherwise 2nd sheet will get drawn, and weirdly
                    this.mesh = delaunayized(this.mesh,
                                             false,
                                             1.,
                                             true,
                                             false, // calcInsideOutDualVertsFlag=false this time
                                             false);
                }
                assert(this.mesh.verts.size() == n);
                this.nFixagesSinceLastNoise = 0;
                if (verboseLevel >= 1) OUT("    out doConvexNoiseThing1");
            } // doConvexNoiseThing1
            private void doConvexNoiseThing(int n)
            {
                //doConvexNoiseThing0(n);
                doConvexNoiseThing1(n);
            }

            private void doUniformGridThing(int nX)
            {
                if (nX <= 0)
                    mesh = new Mesh(new double[0][3], new int[][]{});
                else if (nX == 1)
                    mesh = new Mesh(new double[][] {{0.,0.,0.}}, new int[][]{});
                else if (pRotationalSymmetry.get() % 3 == 0)
                {
                    // do regular tri grid, verts of {3,6}
                    double r = 1.;
                    int nRots = 6;
                    int nVerts = nX*(nX-1)/2 * nRots + 1;
                    double verts[][] = new double[nVerts][3]; // zeros initially, heights stay zero
                    int iVert = 0;
                    verts[iVert][0] = 0; verts[iVert][1] = 0; iVert++;
                    FORI (iRot, nRots)
                    {
                        double c = ExactTrig.cosPiTimes(iRot, 3);
                        double s = ExactTrig.sinPiTimes(iRot, 3);
                        double m[][] = {{c,s},{-s,c}};
                        FORI (iY, nX-1)
                            FORI (iX, nX-iY-1)
                            {
                                double x = ((iX+1.)/(nX-1.) + iY/2./(nX-1.)) * r;
                                double y = (Math.sqrt(3.)/2. * iY / (nX-1.)) * r;
                                VecMath.sxvpsxv(verts[iVert++], x, m[0], y, m[1]);
                            }
                    }
                    //PRINT(iVert);
                    //PRINT(verts.length);
                    assert_eq(iVert, verts.length);
                    mesh = new Mesh(verts, new int[][]{});
                }
                else
                {
                    // do regular square grid, verts of {4,4}
                    int nY = nX;
                    double verts[][] = new double[nX*nY][3]; // zeros initially, heights stay zero
                    int iVert = 0;
                    FORI (iY, nY)
                        FORI (iX, nX)
                        {
                            double x = LERP(-.5, .5, iX/(nX-1.));
                            double y = LERP(-.5, .5, iY/(nY-1.));
                            verts[iVert][0] = x;
                            verts[iVert][1] = y;
                            iVert++;
                        }
                    assert_eq(iVert, verts.length);
                    mesh = new Mesh(verts, new int[][]{});
                }

                if (true)
                {
                    // randomly homogeneous scale half the verts by 2.
                    // this shouldn't change anything.
                    System.out.println("randomly homogeneous scaling about half the grid verts by 2");
                    int nVerts = mesh.verts.size();
                    FORI (iVert, nVerts)
                    {
                        Mesh.Vertex vert = mesh.getVert(iVert);
                        if (randomNumberGenerator.nextDouble() > .5)
                            vert.setXYZW(vert.X()*2.,
                                         vert.Y()*2.,
                                         vert.Z()*2.,
                                         vert.W()*2.);
                    }
                }

            } // doUniformGridThing

